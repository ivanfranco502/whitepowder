<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pwd_reset_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="7"
    android:orientation="vertical"
    android:background="@drawable/gr_background"
    tools:ignore="MergeRootFrame">

    <RelativeLayout 
        android:id="@+id/ResetContent1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">
        
		    <RelativeLayout
			        android:id="@+id/StartMargin1"
			        android:layout_height="1dp"
			        android:layout_width="match_parent"
			        android:background="#ffffff"/>	    
		    
		        <RelativeLayout
			        android:id="@+id/RegisterBan1"
			        android:layout_height="30dp"
			        android:layout_width="match_parent"
			        android:background="#038abe"
			        android:layout_below="@id/StartMargin1">	        
		         
				    <TextView
				        android:id="@+id/pwd_reset_title"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:gravity="center"
				        android:text="@string/pwd_reset_title"
				        android:textColor="#ffffff"
				        android:textSize="20sp"/>   
		            	        
		        </RelativeLayout>
		        <RelativeLayout
			        android:id="@+id/RegisterMargin1"
			        android:layout_height="5dp"
			        android:layout_width="match_parent"
			        android:background="#055777"
			        android:layout_below="@id/RegisterBan1"/>    
		    
		    
			<TextView
			    android:id="@+id/pwd_reset_instructions"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_centerHorizontal="true"
			    android:layout_margin="20dp"
			    android:paddingLeft="10dp"
			    android:paddingRight="10dp"
			    android:textColor="#ffffff"
			    android:gravity="center_horizontal"    
			    android:layout_below="@id/RegisterMargin1"
			    android:text="@string/pwd_reset_instructions"
			    android:textSize="18sp" />
			
			 <RelativeLayout
			     android:id="@+id/pwd_reset_email_container"
			     android:layout_width="match_parent"
			     android:layout_height="65dp"
			     android:layout_centerVertical="true"
			     android:layout_below="@id/pwd_reset_instructions"
			     android:layout_marginTop="25dp">
			     	
			     <EditText
			         android:id="@+id/pwd_reset_email_input"
			         android:inputType="textEmailAddress"
			         android:hint="@string/hint_email"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:layout_centerHorizontal="true"
			         android:layout_centerVertical="true"
			         android:ems="15">
			         <requestFocus />
			     </EditText>	
			 </RelativeLayout>
	 
	 </RelativeLayout>
	 
	<RelativeLayout
	     android:id="@+id/pwd_reset_send_button"
	     android:layout_width="match_parent"
	     android:layout_height="0dp"
	     android:layout_weight="1"	     
	     android:gravity="center"
	     android:layout_below="@+id/pwd_reset_email_container"
	     android:background="#7caf00" >
	     	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/send_btn"
	           	android:textSize="20sp"
	            android:textColor="#FFFFFF" /> 
	                
	  </RelativeLayout>		 
	     
</LinearLayout>