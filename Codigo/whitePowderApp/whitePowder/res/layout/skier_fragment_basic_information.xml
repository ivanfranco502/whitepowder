<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffffff"
    android:weightSum="23"
    android:orientation="vertical" >
    
        
    <ScrollView
        android:id="@+id/ScrollviewBasicInfo"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="20"  >
    <RelativeLayout
        android:id="@+id/BasicRel1"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        
        <RelativeLayout
	        android:id="@+id/BasicInfoSkiCenter"
	        android:layout_height="100dp"
	        android:layout_width="match_parent">	        
         
		    <ImageView
		        android:id="@+id/LogoSkiCenter"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:src="@drawable/ic_skicenter_logo"
		        android:scaleType="centerInside"/>   
            	        
        </RelativeLayout>   
        
        <RelativeLayout
	        android:id="@+id/BasicInfoBan1"
	        android:layout_height="30dp"
	        android:layout_width="match_parent"
	        android:background="#038abe"
	        android:layout_below="@id/BasicInfoSkiCenter">	        
         
		    <TextView
		        android:id="@+id/altitudeBan"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text="Altitud"
		        android:textColor="#ffffff"
		        android:textSize="20sp"/>   
            	        
        </RelativeLayout>
        <RelativeLayout
	        android:id="@+id/BasicInfoMargin1"
	        android:layout_height="5dp"
	        android:layout_width="match_parent"
	        android:background="#055777"
	        android:layout_below="@id/BasicInfoBan1"/>
        
        <RelativeLayout
	        android:id="@+id/BasicInfoContent1"
	        android:layout_height="120dp"
	        android:layout_width="match_parent"
	        android:layout_below="@id/BasicInfoMargin1">
		    
            <RelativeLayout
	        android:id="@+id/RelLogoMountain"
	        android:layout_height="60dp"
	        android:layout_width="match_parent">
            
			    <ImageView
			        android:id="@+id/LogoMountain"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:gravity="center"
			        android:src="@drawable/ic_mountain"
			        android:scaleType="centerInside"/>              	        
         	
			</RelativeLayout>
			 
			<RelativeLayout
		        android:id="@+id/TextMountain"
		        android:layout_height="40dp"
		        android:layout_width="match_parent"
		        android:gravity="center"
		        android:layout_below="@id/RelLogoMountain">
	            
				<TextView
			        android:id="@+id/base"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#000000"
			        android:textSize="15sp"
			        android:text="Base:"
			        android:layout_marginRight="100dp"
			        />
			    <TextView
			        android:id="@+id/cima"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#000000"
			        android:textSize="15sp"
			        android:text="Cima:"
			        android:layout_marginLeft="100dp"
			        />
			    
	            <TextView
			        android:id="@+id/ski_center_minimum_height"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#000000"
			        android:textSize="15sp"
			        android:layout_marginRight="100dp"
			        android:layout_below="@id/cima"
			        />
			    <TextView
			        android:id="@+id/ski_center_maximum_height"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="#000000"
			        android:textSize="15sp"
			        android:layout_marginLeft="100dp"
			        android:layout_below="@id/cima"
			        />
			</RelativeLayout>

        </RelativeLayout>
        
        <RelativeLayout
	        android:id="@+id/BasicInfoBan2"
	        android:layout_height="30dp"
	        android:layout_width="match_parent"
	        android:background="#038abe"
	        android:layout_below="@id/BasicInfoContent1">	        
         
		    <TextView
		        android:id="@+id/SeasonBan"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text="Temporada 2014"
		        android:textColor="#ffffff"
		        android:textSize="20sp"/>   
            	        
        </RelativeLayout>
        <RelativeLayout
	        android:id="@+id/BasicInfoMargin2"
	        android:layout_height="5dp"
	        android:layout_width="match_parent"
	        android:background="#055777"
	        android:layout_below="@id/BasicInfoBan2"/>
        
        <RelativeLayout
	        android:id="@+id/BasicInfoContent2"
	        android:layout_height="150dp"
	        android:layout_width="match_parent"
	        android:gravity="center_horizontal"
	        android:layout_below="@id/BasicInfoMargin2">
		    
 
		            
			<RelativeLayout
	        android:id="@+id/RelCalendarSeason"
	        android:layout_height="130dp"
	        android:layout_width="110dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginRight="150dp">
            
		    	<TextView
			        android:id="@+id/SeasonComienzo"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:text="Comienzo:"
			        android:textColor="#000000"
			        android:textSize="15sp"/> 			    
			    
			    <ImageView
			        android:id="@+id/CalendarFrom"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:src="@drawable/ic_calendar"
			        android:scaleType="centerInside"
			        android:layout_below="@id/SeasonComienzo"/>
			    
			    <TextView
			        android:id="@+id/ski_center_season_since"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:layout_marginTop="10dp"
			        android:textColor="#ffffff"
		        	android:textSize="15sp"
        		    android:layout_below="@id/SeasonComienzo"/>
			    
			    
			    <TextView
			        android:id="@+id/ski_center_season_since_num"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:layout_marginTop="0dp"
			        android:textColor="#000000"
		        	android:textSize="50sp"
		        	android:text="15"
        		    android:layout_below="@id/ski_center_season_since"/>			    	        
         	
			</RelativeLayout>
			
			<RelativeLayout
	        android:id="@+id/RelCalendarSeasonUpto"
	        android:layout_height="130dp"
	        android:layout_width="110dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="150dp">
          
		    	<TextView
			        android:id="@+id/SeasonCierre"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:text="Cierre:"
			        android:textColor="#000000"
			        android:textSize="15sp"/> 			    
			    
			    <ImageView
			        android:id="@+id/CalendarUpto"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:src="@drawable/ic_calendar"
			        android:scaleType="centerInside"
					android:layout_below="@id/SeasonCierre"/>
			    
			    <TextView
			        android:id="@+id/ski_center_season_upto"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:layout_marginTop="10dp"
			        android:textColor="#ffffff"
		        	android:textSize="15sp"
        		    android:layout_below="@id/SeasonCierre"/>
			    
			    <TextView
			        android:id="@+id/ski_center_season_upto_num"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal"
			        android:layout_marginTop="0dp"
			        android:textColor="#000000"
		        	android:textSize="50sp"
		        	android:text="15"
        		    android:layout_below="@id/ski_center_season_upto"/>
			    
	        
         	
			</RelativeLayout>			

        </RelativeLayout>
        
        <RelativeLayout
	        android:id="@+id/BasicInfoBan3"
	        android:layout_height="30dp"
	        android:layout_width="match_parent"
	        android:background="#038abe"
	        android:layout_below="@id/BasicInfoContent2">	        
         
		    <TextView
		        android:id="@+id/OpenHoursBan"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:text="Horarios"
		        android:textColor="#ffffff"
		        android:textSize="20sp"/>   
            	        
        </RelativeLayout>
        <RelativeLayout
	        android:id="@+id/BasicInfoMargin3"
	        android:layout_height="5dp"
	        android:layout_width="match_parent"
	        android:background="#055777"
	        android:layout_below="@id/BasicInfoBan3"/>
        
        <RelativeLayout
	        android:id="@+id/BasicInfoContent3"
	        android:layout_height="150dp"
	        android:layout_width="match_parent"
	        android:layout_below="@id/BasicInfoMargin3">	        
         

        </RelativeLayout>         	

		    <TextView
		        android:id="@+id/ski_center_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		    	android:paddingRight="@dimen/activity_horizontal_margin"
		        android:gravity="center"
		        android:textSize="20sp"
		        android:layout_below="@id/BasicInfoContent3"
		        />
		    <TextView
		        android:id="@+id/ski_center_location"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		    	android:paddingRight="@dimen/activity_horizontal_margin"
		        android:layout_centerVertical="true"
		        android:gravity="center"
		        android:textSize="13sp"
		        android:layout_below="@id/ski_center_name"
		        />
		    <TextView
		        android:id="@+id/ski_center_amenities"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		    	android:paddingRight="@dimen/activity_horizontal_margin"
		        android:layout_centerVertical="true"
		        android:layout_below="@id/ski_center_location"
		        android:paddingTop="10dp"
		        />


		    <ListView 
		        android:id="@+id/ski_center_schedule"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		    	android:paddingRight="@dimen/activity_horizontal_margin"
		        android:layout_below="@id/ski_center_amenities"
		        android:divider="@null"
		        />
		    <TextView
		        android:id="@+id/ski_center_details"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		    	android:paddingRight="@dimen/activity_horizontal_margin"
		        android:layout_centerVertical="true"
		        android:layout_below="@id/ski_center_schedule"
		        />
		     
		     <View
		        android:id="@+id/view1"
			    android:layout_width="wrap_content"
			    android:layout_height="3dp"
			    android:background="#FFFFFF"
			    android:layout_marginBottom="2dp"
			    android:layout_marginTop="2dp"
			    android:layout_below="@id/ski_center_details"
			    />  
		     <!--
		    <RelativeLayout 
		        android:id="@+id/security_norms_container"
			    android:layout_width="match_parent"
			    android:layout_height="25dp"
			    >
			    <TextView
			        android:id="@+id/security_norms"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        />
		    </RelativeLayout>
		    
		    <View
			    android:layout_width="match_parent"
			    android:layout_height="1dp"
			    android:background="#6DCAEC"
			    android:layout_marginBottom="2dp"
			    android:layout_marginTop="2dp"/>-->
		    
		    <TextView
		        android:id="@+id/forecast_date"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		    	android:paddingRight="@dimen/activity_horizontal_margin"
		        android:layout_below="@id/view1" />
		    
		     <TextView
		        android:id="@+id/forecast_description"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		    	android:paddingRight="@dimen/activity_horizontal_margin"
		        android:layout_below="@id/forecast_date" />
		    
		    <TextView
		        android:id="@+id/forecast_min_temp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		    	android:paddingRight="@dimen/activity_horizontal_margin"
		        android:layout_below="@+id/forecast_description" />
		    
		    <TextView
		        android:id="@+id/forecast_max_temp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		    	android:paddingRight="@dimen/activity_horizontal_margin"
		        android:layout_below="@+id/forecast_min_temp" />
		        
			<ImageView 
		        android:id="@+id/forecast_icon"
		        android:layout_width="90dp"
		        android:layout_height="90dp"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		    	android:paddingRight="@dimen/activity_horizontal_margin"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:layout_below="@id/view1"/>
			
			<TextView 
			    android:id="@+id/forecast_see_extended"
			    android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="@dimen/activity_horizontal_margin"
		    	android:paddingRight="@dimen/activity_horizontal_margin"
		        android:layout_below="@+id/forecast_max_temp"
		        android:gravity="center"
		        android:text="@string/forecast_see_extended"
			    />
    
	</RelativeLayout>
	</ScrollView>
	
    <RelativeLayout 
	         android:id="@+id/BasicRel2"
	         android:layout_width="match_parent"
	         android:layout_height="0dp"
	         android:layout_alignParentBottom="true"
	         android:layout_weight="3"
	         android:gravity="bottom">
		        <ImageView
			        android:id="@+id/emergency"
			        android:contentDescription="Emergency"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:background="@drawable/gr_emergency"/>
	  </RelativeLayout>
		
</LinearLayout>
