<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- API 14 theme customizations can go here. -->
    </style>
    
    <style name="AppTheme" parent="AppBaseTheme">
    
        <!--<item name="android:background">@drawable/gr_background</item>
        -->
        <item name="android:actionBarStyle">@style/ActionBarStyle2</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle2</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBarStyle2</item>
        
       <!--  <item name="background">@drawable/gr_background</item> -->
        <item name="actionBarStyle">@style/ActionBarStyle2</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle2</item>
        <item name="actionBarTabBarStyle">@style/ActionBarTabBarStyle2</item>
        </style>
        
       <style name="ActionBarStyle2" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/fondo</item>
        
        <item name="background">@drawable/fondo</item>
    </style>
    
    <style name="ActionBarTabStyle2" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/ic_selector</item>
        
        <item name="background">@drawable/ic_selector</item>
    </style>
    
    <style name="ActionBarTabBarStyle2" parent="@style/Widget.AppCompat.Light.ActionBar.TabBar">
        <item name="android:background">@drawable/fondo</item>
        <item name="background">@drawable/fondo</item>
        
        
        <item name="android:backgroundSplit">@drawable/fondo</item>
        <item name="backgroundSplit">@drawable/fondo</item>
        <item name="android:backgroundStacked">@drawable/fondo</item>
    </style>

</resources>
