<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gr_background"
    tools:context="com.example.actionbartest.SkierActivity" >
     
	       
	         <ImageButton
		        android:id="@+id/bt_submenu"
		        style="?android:attr/buttonBarButtonStyle"
		        android:contentDescription="Submenu"
		    	android:layout_width="35dp"
		    	android:layout_height="15dp"
		    	android:layout_marginTop="16dp"
		    	android:layout_marginLeft="20dp"
		    	android:layout_alignParentLeft="true"
		    	android:background="@drawable/ic_submenu"
		    	/>

	          <ImageButton
		        android:id="@+id/bt_skiermode"
		        style="?android:attr/buttonBarButtonStyle"
		        android:contentDescription="Skiermode"
		    	android:layout_width="58dp"
		    	android:layout_height="80dp"
		    	android:layout_marginTop="8dp"
		    	android:layout_marginRight="8dp"
		    	android:layout_alignParentRight="true"
		    	android:background="@drawable/sl_skiermode"
		    	/>
    
		    
	  <LinearLayout
        android:id="@+id/VerticalLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bt_submenu"
        android:layout_marginTop="35dp"
        android:orientation="vertical"
        android:weightSum="8">
	    
	    <ImageView
	        android:id="@+id/logowp"
	        android:contentDescription="Logowp"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_below="@id/bt_submenu"
	        android:layout_weight="4"
	        android:src="@drawable/ic_bannerwp"/>
	    
	       <LinearLayout
	         android:id="@+id/RelativeLayout2"
	         android:layout_width="match_parent"
	         android:layout_height="0dp"
	         android:layout_weight="3"
	         android:layout_below="@id/logowp"
	         android:orientation="vertical">
		    
	           <LinearLayout 
	               android:id="@+id/LinearLayout1"
	               android:layout_height="65dp"
	               android:layout_width="match_parent"
				   android:layout_marginLeft="25dp"
				   android:layout_marginRight="25dp"
				   android:orientation="horizontal"
				   android:gravity="center">
				   
	               <ImageButton
				        android:id="@+id/bt_basicinfo"
				        style="?android:attr/buttonBarButtonStyle"
				        android:contentDescription="BasicInfo"
				    	android:layout_width="65dp"
				    	android:layout_height="65dp"
				    	android:layout_marginRight="26dp"
				    	android:background="@drawable/ic_basicinfo"
				    	/>
	       
			       <ImageButton
				        android:id="@+id/bt_clima"
				        style="?android:attr/buttonBarButtonStyle"
				        android:contentDescription="Clima"
				    	android:layout_width="65dp"
				    	android:layout_height="65dp"
				    	android:background="@drawable/ic_clima"
				    	/>
			       
			       <ImageButton
				        android:id="@+id/bt_security"
				        style="?android:attr/buttonBarButtonStyle"
				        android:contentDescription="Security"
				    	android:layout_width="65dp"
				    	android:layout_height="65dp"
				    	android:layout_marginLeft="25dp"
				    	android:background="@drawable/ic_security"
				    	/>
			       
		        </LinearLayout>
		        
	           <LinearLayout 
	               android:id="@+id/LinearLayout2"
	               android:layout_height="65dp"
	               android:layout_width="match_parent"
	               android:layout_marginTop="15dp"
				   android:layout_marginLeft="35dp"
				   android:layout_marginRight="35dp"
				   android:orientation="horizontal"
				   android:layout_below="@id/LinearLayout1"
				   android:gravity="center">
				   
	               <ImageButton
				        android:id="@+id/bt_statistics"
				        style="?android:attr/buttonBarButtonStyle"
				        android:contentDescription="Statistics"
				    	android:layout_width="65dp"
				    	android:layout_height="65dp"
				    	android:layout_marginRight="35dp"
				    	android:background="@drawable/ic_statistics"
				    	/>
	       
			       <ImageButton
				        android:id="@+id/bt_map"
				        style="?android:attr/buttonBarButtonStyle"
				        android:contentDescription="Map"
				    	android:layout_width="65dp"
				    	android:layout_height="65dp"
				    	android:background="@drawable/ic_map"
				    	/>
			       
			       
		        </LinearLayout>
	
		   </LinearLayout>
		   
	       <RelativeLayout 
		       android:id="@+id/RelativeLayout3"
		       android:layout_width="match_parent"
		       android:layout_height="0dp"
		       android:layout_weight="1"
		       android:gravity="bottom">
	           
		<RelativeLayout
          android:id="@+id/emergency_background"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:background="@drawable/gr_emergency">

         <RelativeLayout
		  android:id="@+id/LinearLayout4"
	      android:layout_width="match_parent"
	      android:layout_height="match_parent"
	      android:orientation="horizontal"
	      android:gravity="center" >
         
         <ImageView
             android:id="@+id/progressBar1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_centerVertical="true"
             android:src="@drawable/ic_progressbar3"
             android:scaleType="centerInside"
             android:layout_marginRight="140dp"/>
         
		 <TextView
	        android:id="@+id/help"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_centerVertical="true"
	        android:text="AYUDA"
	        android:alpha="0.5"
	        android:gravity="center"
	        android:textColor="#ffffff"
	        android:textSize="20dp"/>
         
		<ImageView
             android:id="@+id/progressBar2"
             android:layout_width="match_parent"
             android:layout_height="60dp"
			 android:layout_centerVertical="true"
             android:src="@drawable/ic_progressbar3"
             android:scaleType="centerInside"
			 android:layout_marginLeft="140dp"/>

		</RelativeLayout>
		
        <RelativeLayout
		  android:id="@+id/RelativeLayout5"
	      android:layout_width="match_parent"
	      android:layout_height="60dp"
	      android:gravity="right" >
         
         <ImageView
             android:id="@+id/mountainBar"
             android:layout_height="60dp"
             android:layout_width="60dp"
             android:layout_marginRight="10dp"
             android:src="@drawable/ic_emerg_bar3"
             android:scaleType="centerInside"/>

		</RelativeLayout>         
      
	       <SeekBar
	           android:id="@+id/emergency_seekBar"
	           android:layout_width="fill_parent"
	           android:layout_height="60dp"
	           android:indeterminate="false"
	           android:minHeight="60dp"
	           android:maxHeight="60dp"
	           android:paddingLeft="20dp"
	           android:paddingRight="15dp"
	           android:progressDrawable="@android:color/transparent"
	           android:thumb="@drawable/thumb_emergency"
	           android:thumbOffset="9dp" />

	       </RelativeLayout>
	       
		</RelativeLayout>
	       
	  </LinearLayout>
    
</RelativeLayout>


