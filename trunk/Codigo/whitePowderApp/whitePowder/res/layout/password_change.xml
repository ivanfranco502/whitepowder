<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pwd_change_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6DCAEC"
    tools:ignore="MergeRootFrame">

	<TextView
	    android:id="@+id/pwd_change_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="25dp"
	    android:text="@string/pwd_change_text"
	    android:textSize="20sp" />
    
	 <RelativeLayout
	     android:id="@+id/pwd_change_username_container"
	     android:layout_width="match_parent"
	     android:layout_height="65dp"
	     android:layout_centerVertical="true"
	     android:layout_below="@id/pwd_change_title"
	     android:layout_marginTop="25dp"
	     android:background="#FFFFFF">
	     	
	     <EditText
	         android:id="@+id/pwd_change_username_input"
	         android:inputType="text"
	         android:hint="@string/hint_user"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerHorizontal="true"
	         android:layout_centerVertical="true"
	         android:ems="15" />	
	 </RelativeLayout>
	 
     <RelativeLayout
	     android:id="@+id/pwd_change_current_password_container"
	     android:layout_width="match_parent"
	     android:layout_height="65dp"
	     android:layout_marginTop="10dp"
	     android:layout_below="@+id/pwd_change_username_container"
	     android:background="#FFFFFF">
	
	      <EditText
	          android:id="@+id/pwd_change_current_password_input"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_centerHorizontal="true"
	          android:hint="@string/pwd_change_hint_current_password"
	          android:layout_centerVertical="true"
	          android:ems="15"
	          android:inputType="textPassword" >
	
	          <requestFocus android:layout_width="wrap_content" />
	
	      </EditText>
	</RelativeLayout>
	
    <RelativeLayout
	     android:id="@+id/pwd_change_new_password_container"
	     android:layout_width="match_parent"
	     android:layout_height="65dp"
	     android:layout_marginTop="10dp"
	     android:layout_below="@+id/pwd_change_current_password_container"
	     android:background="#FFFFFF">
	
	      <EditText
	          android:id="@+id/pwd_change_new_password_input"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:layout_centerHorizontal="true"
	          android:hint="@string/pwd_change_hint_new_password"
	          android:layout_centerVertical="true"
	          android:ems="15"
	          android:inputType="textPassword" >
	          	
	          <requestFocus android:layout_width="wrap_content" />
	
	      </EditText>
	</RelativeLayout>
	
    <RelativeLayout
	     android:id="@+id/pwd_change_repeat_new_password_container"
	     android:layout_width="match_parent"
	     android:layout_height="65dp"
	     android:layout_centerVertical="true"
	     android:layout_below="@id/pwd_change_new_password_container"
	     android:layout_marginTop="10dp"
	     android:background="#FFFFFF">
	     	
	     <EditText
	         android:id="@+id/pwd_change_repeat_new_password_input"
	         android:inputType="textPassword"
	         android:hint="@string/pwd_change_hint_repeat_new_password"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_centerHorizontal="true"
	         android:layout_centerVertical="true"
	         android:ems="15" />	
	 </RelativeLayout>
	 
	 <RelativeLayout
	     android:id="@+id/pwd_change_change_button"
	     android:layout_width="match_parent"
	     android:layout_height="50dp"
	     android:layout_marginTop="20dp"
	     android:gravity="center"
	     android:layout_below="@+id/pwd_change_repeat_new_password_container"
	     android:background="#7caf00" >
	     	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/send_btn"
	           	android:textSize="20sp"
	            android:textColor="#FFFFFF" /> 
	                
	  </RelativeLayout>		  
	     
</RelativeLayout>