package com.example.whitepowder;

import java.io.BufferedReader;
import java.io.DataOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.net.HttpURLConnection;
import java.net.MalformedURLException;
import java.net.URL;
import android.os.AsyncTask;

public class LoginThread extends AsyncTask<Void, Void, Void> {
	protected void onPreExecute() {
	// NOTE: You can call UI Element here.       
	}
	
	@Override
	protected Void doInBackground(Void... arg0) {
		
		try {
			String params = "username=lucas"//&password=capo";
			URL url = new URL("http://whitetavros.com/Symfony/web/api/login");
			HttpURLConnection connection = (HttpURLConnection)url.openConnection();
		    connection.setRequestMethod("POST");
		    
		    connection.setUseCaches (false);
		    connection.setDoInput(true);
		    connection.setDoOutput(true);
		    
		    //Send request
		    DataOutputStream wr = new DataOutputStream (connection.getOutputStream ());
		    wr.writeBytes(params);
		    wr.flush ();
		    wr.close ();
		    
		    int a = connection.getResponseCode();
		    //Get Response	
		    
			InputStream is = connection.getInputStream();
			BufferedReader reader = new BufferedReader(new InputStreamReader(is));		
			String response = reader.readLine();
			String f = "hola";
			
		    
		} catch (MalformedURLException e) {
			//Log.i("Error","Error creating URL from server address");
		} catch (IOException e) {
			//Log the error
		}
		
		return null;
	}
	
    protected void onPostExecute(Void unused) {	

   }

}
